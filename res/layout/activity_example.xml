<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" 
    tools:context="maximsblog.blogspot.com.wheelview.ExampleActivity" >

    <maximsblog.blogspot.com.wheelview.WheelView
            android:id="@+id/wheel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            whatever:enable="true"
            whatever:start_value="7"
            whatever:total_number_sectors="23"
            whatever:total_enable_degree="322" 
            whatever:number_simple_bars_interval="7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <maximsblog.blogspot.com.wheelview.WheelView
            android:id="@+id/wheel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            whatever:enable="true"
            whatever:start_value="1"
            whatever:total_number_sectors="10"
            whatever:total_enable_degree="330"
            whatever:number_simple_bars_interval="3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <maximsblog.blogspot.com.wheelview.WheelView
                android:id="@+id/wheel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                whatever:enable="true"
                whatever:total_number_sectors="2"
                whatever:start_value="10"
                whatever:total_enable_degree="100"
                whatever:number_simple_bars_interval="4" />

            <CheckBox
                android:id="@+id/enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enable" />

        </LinearLayout>
        
    </LinearLayout>
     
</LinearLayout>
